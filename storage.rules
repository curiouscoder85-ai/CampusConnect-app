rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars
    match /avatars/{userId}/{fileName} {
      // Allow users to read anyone's avatar
      allow read: if true;
      // Allow users to write (create, update, delete) their own avatar, OR allow an admin to write.
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin')
                    && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                    && request.resource.contentType.matches('image/.*');
    }
     // Rules for assignment submissions
    match /submissions/{courseId}/{studentId}/{assignmentId}/{submissionId}/{fileName} {
      // Allow the student who submitted it or the teacher of the course to read.
      allow read: if request.auth != null && (request.auth.uid == studentId || get(/databases/(default)/documents/courses/$(courseId)).data.teacherId == request.auth.uid);
      // Allow only the student to create/upload their submission.
      allow write: if request.auth != null && request.auth.uid == studentId
                     && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }
  }
}
